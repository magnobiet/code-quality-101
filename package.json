{
  "name": "code-quality-101",
  "version": "0.1.0",
  "description": "Code Quality 101",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "lint:editorconfig": "editorconfig-checker -ignore-defaults",
    "lint:html": "htmlhint",
    "lint:style": "stylelint './src/**/*.{css,sass,scss}'",
    "lint:style:fix": "npm run lint:style -- --fix",
    "lint:script": "eslint ./src",
    "lint:script:fix": "npm run lint:script -- --fix=true",
    "lint:commit": "commitlint",
    "lint:staged": "lint-staged",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Magno Fernando Brixner Bi√©t <magno.biet@gmail.com> (https://magnobiet.com/)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "editorconfig-checker": "^4.0.2",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.23.4",
    "htmlhint": "^0.15.1",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.3.5"
  }
}
